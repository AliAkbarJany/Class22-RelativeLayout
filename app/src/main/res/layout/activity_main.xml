<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"

    >

    <ImageView
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:src="@drawable/mosquetwo"
        android:scaleType="fitXY"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="15dp"
        />

    <ImageView
        android:id="@+id/middleImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/mosquethree"
        android:scaleType="fitXY"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello rafsan"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_above="@id/middleImage"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ALI"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_toLeftOf="@id/middleImage"
        android:layout_centerVertical="true"


        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hashami"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_below="@id/middleImage"
        android:layout_centerHorizontal="true"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Akbar"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/middleImage"

        />



</RelativeLayout>